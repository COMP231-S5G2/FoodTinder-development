<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HomeActivity"
    android:orientation="vertical">

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:srcCompat="@drawable/ic_temp_logo" />

  <ImageView
      android:id="@+id/imageView3"
      android:layout_width="match_parent"
      android:layout_height="109dp"
      app:srcCompat="@drawable/ic_under_construction" />

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text="Temporary Home"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="131dp"
      android:gravity="center"
      android:orientation="horizontal">

    <Button
        android:id="@+id/btnAddDishesActivity"
        android:layout_width="140dp"
        android:layout_height="77dp"
        android:layout_marginRight="15dp"
        android:textAllCaps="false"
        android:text="Create Restaurant Activity"/>

    <Button
        android:id="@+id/btnTbc"
        android:layout_width="140dp"
        android:layout_height="77dp"
        android:textAllCaps="false"
        android:text="(no function)"/>

  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="131dp"
      android:gravity="center"
      android:orientation="horizontal">

    <Button
        android:id="@+id/btnFindingMatchActivity"
        android:layout_width="140dp"
        android:layout_height="77dp"
        android:layout_marginRight="15dp"
        android:textAllCaps="false"
        android:text="Finding Match Activity"/>

    <Button
        android:id="@+id/btnCreateGroupRoom"
        android:layout_width="140dp"
        android:layout_height="77dp"
        android:textAllCaps="false"
        android:text="Create Group Room"/>

  </LinearLayout>


</LinearLayout>