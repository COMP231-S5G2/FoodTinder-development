<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_red_bg"
    android:layout_gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Create Group Room"
        android:textAlignment="center"
        android:textSize="20dp" />

    <ImageView
        android:layout_width="210dp"
        android:layout_height="124dp"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:src="@drawable/ic_group" />

    <EditText
        android:id="@+id/etRoomName"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center"
        android:ems="10"
        android:textAlignment="center"
        android:hint="username"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etRoomCode"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="input code"
        android:inputType="number"
        android:textAlignment="center"
        android:labelFor="@+id/etRoomCode"
        android:maxLength="4" />

    <EditText
        android:id="@+id/etLocation"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:ems="10"
        android:textAlignment="center"
        android:hint="input location"
        android:inputType="textPostalAddress" />

    <Button
        android:id="@+id/btnCreateGrp"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn_start_match"
        android:text="Create group"
        android:textColor="@color/group_font_color"
        android:textSize="15dp" />


</LinearLayout>